server {
    listen 80;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # Проксі на бекенд
    location /api/ {
        proxy_pass http://${BACKEND_HOST}:8081/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # SPA (React/Vite)
    location / {
        try_files $uri /index.html;
    }
}
